include $(TOPDIR)/rules.mk

PKG_NAME:=luci-app-h69k-fancontrol
PKG_VERSION:=1.0
PKG_RELEASE:=1

PKG_BUILD_DIR:=$(BUILD_DIR)/$(PKG_NAME)

include $(INCLUDE_DIR)/package.mk

define Package/luci-app-h69k-fancontrol
  SECTION:=luci
  CATEGORY:=LuCI
  SUBMENU:=3. Applications
  TITLE:=H69K Fan Control
  DEPENDS:=+lua +luci-base +luci-compat
  PKGARCH:=all
endef

define Package/luci-app-h69k-fancontrol/description
  LuCI interface for H69K fan control.
endef

define Build/Prepare
    mkdir -p $(PKG_BUILD_DIR)
    $(CP) ./luasrc $(PKG_BUILD_DIR)/
    $(CP) ./root $(PKG_BUILD_DIR)/
endef

define Build/Configure
endef

define Build/Compile
endef

define Package/luci-app-h69k-fancontrol/install
    $(INSTALL_DIR) $(1)/usr/lib/lua/luci
    cp -pR $(PKG_BUILD_DIR)/luasrc/* $(1)/usr/lib/lua/luci/
    
    $(INSTALL_DIR) $(1)/etc/init.d
    $(INSTALL_BIN) $(PKG_BUILD_DIR)/root/etc/init.d/h69k_fancontrol $(1)/etc/init.d/
    
    $(INSTALL_DIR) $(1)/etc/config
    $(INSTALL_CONF) $(PKG_BUILD_DIR)/root/etc/config/h69k_fancontrol $(1)/etc/config/
    
    $(INSTALL_DIR) $(1)/usr/bin
    $(INSTALL_BIN) $(PKG_BUILD_DIR)/root/usr/bin/h69k_fancontrol.sh $(1)/usr/bin/
endef

$(eval $(call BuildPackage,luci-app-h69k-fancontrol))
